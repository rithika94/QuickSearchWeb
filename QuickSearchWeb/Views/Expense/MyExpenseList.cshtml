@model IEnumerable<QuickSearchWeb.Models.ExpenseListViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">


            <div class="row">
                <div class="page-header">
                    <div class="page-title">
                        <div class="col-lg-4">
                            <input type="button" value="Add Expense Sheet" class="btn btn-flat btn-info m-l-5" onclick="location.href='@Url.Action("MyExpenseCreate", "Expense" )'" />

                        </div>
                        <div class="col-lg-4">
                            <h4 class="text-center"><strong>My Expense Sheets</strong> </h4>
                        </div>
                        <div class="col-lg-4">
                            <ol class="breadcrumb text-right">
                                @*<li class="active">/My TimeSheets</li>*@
                            </ol>
                        </div>
                    </div>
                </div>
            </div><!-- /# row -->

            <div class="main-content">

                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.error
                    </div>

                }

                @if (ViewBag.status != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.status
                    </div>

                }

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card alert">
                            @*<div class="card-header">
                                    <h4>My Time Sheets</h4>
                                </div>*@
                            <div class="card-body">



                                <div class="bootstrap-data-table-panel table-responsive2">
                                    <table class="display table table-borderd table-striped table-responsive row-select">
                                        @*table table-striped table-bordered row-select*@

                                        <thead>
                                            <tr>
                                                <th>
                                                    Last Modified
                                                </th>
                                                <th>
                                                    Expense Sheet Id
                                                </th>
                                                <th>
                                                    Dates
                                                </th>
                                                <th>
                                                    Total
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Actions
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (!(Model == null))
                                            {

                                                foreach (var item in Model)
                                                {
                                                    if (!item.IsDeleted && item.IsActive)
                                                    {
                                                        <tr @*onclick="location.href = '@(Url.Action("Edit", "TimeSheet", new { id = @item.TimeSheetID }))'"*@>
                                                            <td>
                                                                @item.ModifiedDate
                                                            </td>
                                                            <td>
                                                                @item.ExpenseCode
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.StartDate) -  @Html.DisplayFor(modelItem => item.EndDate)
                                                            </td>
                                                            <td>                                                               
                                                               @string.Format("{0:c}", item.Total)
                                                            </td>
                                                            <td>
                                                                @{
                                                                    var status = item.LookupCodeMaster.LookupCodeName;

                                                                    if (status == "Approved")
                                                                    {
                                                                        <span class="badge badge-success">Approved</span>


                                                                    }
                                                                    else if (status == "Rejected")
                                                                    {
                                                                        <span class="badge badge-danger">Rejected</span>


                                                                    }
                                                                    else if (status == "Pending")
                                                                    {
                                                                        <span class="badge badge-warning">Pending</span>


                                                                    }
                                                                    else if (status == "Saved")
                                                                    {
                                                                        <span class="badge badge-default">Saved</span>


                                                                    }

                                                                }



                                                            </td>

                                                            <td>


                                                                <button type="button" class="btn btn-default btn-flat   m-l-5" title="View" onclick="location.href='@Url.Action("MyExpenseDetails", "Expense" , new { id = item.ExpenseId})'"><i class="ti-eye"></i></button>

                                                                @if (item.LookupCodeMaster.LookupCodeName == "Saved" || item.LookupCodeMaster.LookupCodeName == "Rejected")
                                                                {
                                                                    <button type="button" class="btn btn-info btn-flat m-l-5" title="Edit" onclick="location.href='@Url.Action("MyExpenseEdit", "Expense" , new { id = item.ExpenseId})'"><i class="ti-pencil-alt"></i></button>
                                                                    
                                                                }
                                                                <button type="button" class="btn btn-warning btn-flat m-l-5" title="Download" onclick="location.href='@Url.Action("MyExpenseDownload", "Expense" , new { id = item.ExpenseId})'"><i class="ti-download"></i></button>

                                                            </td>

                                                        </tr>


                                                    }


                                                }
                                            }



                                        </tbody>

                                    </table>



                                </div>

                            </div>



                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
