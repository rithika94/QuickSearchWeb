@model IEnumerable<QuickSearchWeb.Models.RecruitmentListViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">

            <div class="row">
                <div class="page-header">
                    <div class="page-title">
                        <div class="col-lg-4">
                            <input type="button" value="Add New Candidate" class="btn btn-flat btn-info m-l-5" onclick="location.href='@Url.Action("Create", "Recruitment")'" />

                        </div>
                        <div class="col-lg-4">
                            <h4 class="text-center"><strong>Recruitment List</strong> </h4>
                        </div>
                        <div class="col-lg-4">
                            <ol class="breadcrumb text-right">
                                @*<li class="active">/My TimeSheets</li>*@
                            </ol>
                        </div>
                    </div>
                </div>
            </div><!-- /# row -->

            <div class="main-content">
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.error
                    </div>

                }
                @if (ViewBag.status != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.status
                    </div>

                }
                <div class="row">
                    @*<input type="button" value="Add New Recruitment" class="btn btn-flat btn-info m-b-10 m-l-5" onclick="location.href='@Url.Action("Create", "Recruitment")'" />*@
                    <div class="col-lg-12">
                        <div class="card alert">
                            @*<div class="card-header">
                                <h4>Recruitment List</h4>
                                <hr />
                            </div>*@
                            <div class="bootstrap-data-table-panel table-responsive2">
                                <table  class="display table table-borderd table-hover table-responsive row-select">
                                    <thead>
                                        <tr>
                                            <th>
                                                Last modified
                                            </th>
                                            <th>Name</th>
                                            
                                            <th>Phone Number</th>
                                            <th>Primary Skill Set</th>
                                            <th>Available Date</th>                                           
                                            <th>Created By</th>
                                            <th>Last Modified By</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!(Model == null))
                                        {
                                            foreach (var item in Model)
                                            {

                                                <tr onclick="location.href = '@(Url.Action("Edit", "Recruitment", new { id=item.RecruitmentId}))'">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                                    </td>

                                                    
                                                    <td>
                                                        @*@string.Format("{0: (###) ###-####}", Convert.ToInt64(item.PhoneNumber))*@
                                                        @item.PhoneNumber
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PrimarySkillSet)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AvailableDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreatedUser)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ModifiedUser)-@Html.DisplayFor(modelItem => item.ModifiedDate)
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>No User Exists</td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

