                                                                <input type="submit" value="Update" name="action" class="btn btn-flat btn-info m-b-10 m-l-5 pull-right" />

                                                                //<input type="button" value="Delete" class="btn btn-flat btn-danger m-b-10 m-l-5" form="post" onclick="location.href='@Url.Action("MySupportDelete", "Support",new { id= Model.SupportId})'" />
                                                                <button type="button" value="Delete" class="btn btn-flat btn-danger m-b-10 m-l-5" data-toggle="modal" data-target="#deleteTS" id="delete">Delete</button>

                                                            }
                                                        </div>
                                                    </div>

                                                </div>
