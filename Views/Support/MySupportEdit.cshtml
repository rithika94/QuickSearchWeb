<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">

            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.error
                </div>

            }
            @if (ViewBag.status != null)
            {
                <div class="alert alert-success">
                    @ViewBag.status
                </div>

            }


            <div class="row">
                <div class="page-header">
                    <div class="page-title">
                        <div class="col-lg-4">
                            <input type="button" value="Back to Service Requests" class="btn btn-flat btn-default m-b-10 m-l-5" form="post" onclick="location.href='@Url.Action("MySupportList", "Support")'" />

                        </div>
                        <div class="col-lg-4">
                            <h4 class="text-center"><strong>Edit Service Request</strong></h4>
                        </div>
                        <div class="col-lg-4">
                            <ol class="breadcrumb text-right">
                                <li><a @*onclick="location.href='@Url.Action("MySupportList", "Support")'"*@>My Service Requests</a></li>
                                <li class="active">Edit Service Request</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-content">
                <div class="row">
                    <div class="container-fluid">
                        <div class="main-content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card alert">
                                        @*<div class="card-header">
                                                <h4>Add a new inventory</h4>
                                                <hr />
                                            </div>*@
                                        <div class="card-body">
                                            @using (Html.BeginForm(FormMethod.Post))
                                            {

                                                @Html.AntiForgeryToken()
                                                @Html.HiddenFor(m => m.SupportId)

                                                <div class="row">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="col-md-12">
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.SupportCode)
                                                            @Html.TextBoxFor(m => m.SupportCode, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.AssignToName)
                                                            @Html.TextBoxFor(m => m.AssignToName, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssueStatus)
                                                            @Html.TextBoxFor(m => m.LookupCodeMaster1.LookupCodeName, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            @Html.LabelFor(m => m.Summary)
                                                            @Html.TextBoxFor(m => m.Summary, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.Summary, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            @Html.LabelFor(m => m.Description)
                                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "10", @cols = "20" })
                                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssueType)
                                                            @Html.DropDownListFor(model => model.LookupIssueType, new SelectList(Model.IssueTypeList, "Id", "Name"), "Select Issue Type", new { @class = "form-control", @id = "IssueType" })
                                                            @Html.ValidationMessageFor(m => m.LookupIssueType, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssuePriority)
                                                            @Html.DropDownListFor(model => model.LookupIssuePriority, new SelectList(Model.IssuePriorityList, "Id", "Name"), "Select Priority", new { @class = "form-control", @id = "Issue Priority" })
                                                            @Html.ValidationMessageFor(m => m.LookupIssuePriority, "", new { @class = "text-danger" })
                                                        </div>

                                                    </div>
                                                    <div class="form-group  ">
                                                        <div class="col-md-12">
                                                            @if (Model.LookupCodeMaster1.LookupCodeName == "Saved")
