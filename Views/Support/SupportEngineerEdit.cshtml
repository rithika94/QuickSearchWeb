@model QuickSearchWeb.Models.SupportViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        function doneTicket() {
            debugger;
            var comments = document.getElementById("Comments");
            if (comments.value == "") {
                document.getElementById("error").innerHTML = "Comments are required";
                //comments.setCustomValidity("Please Enter Comments");
            } else {
                document.getElementById("error").innerHTML = "";
                // comments.setCustomValidity(""); // be sure to leave this empty!
                //alert("Correct!");

                $("#doneticket").modal("hide");
                $('.modal-backdrop').remove();
                $(".loader").show();
                var formdata = $("#CloseSupport").serialize();
                //debugger;
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("DoneTicket", "Support")",
                    data: formdata,
                    success: function () {
                        debugger;

                        //debugger;
                        $(".loader").hide();
                        window.location.href = "/Support/SupportEngineerList";
                        //debugger;

                    }


                })

            }
        }

    </script>

}


<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">

            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.error
                </div>

            }
            @if (ViewBag.status != null)
            {
                <div class="alert alert-success">
                    @ViewBag.status
                </div>

            }


            <div class="row">
                <div class="page-header">
                    <div class="page-title">
                        <div class="col-lg-4">
                            <input type="button" value="Back to Service Requests" class="btn btn-flat btn-default m-b-10 m-l-5" form="post" onclick="location.href='@Url.Action("SupportEngineerList", "Support")'" />

                        </div>
                        <div class="col-lg-4">
                            <h4 class="text-center"><strong>Edit Service Request(Engineer)</strong></h4>
                        </div>
                        <div class="col-lg-4">
                            <ol class="breadcrumb text-right">
                                <li><a @*onclick="location.href='@Url.Action("SupportEngineerList", "Support")'"*@>Employee Service Requests</a></li>
                                <li class="active">Edit Service Request(Engineer)</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-content">
                <div class="row">
                    <div class="container-fluid">
                        <div class="main-content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card alert">
                                        @*<div class="card-header">
                                                <h4>Add a new inventory</h4>
                                                <hr />
                                            </div>*@
                                        <div class="card-body">
                                            @using (Html.BeginForm("SupportEngineerEdit", "Support", FormMethod.Post, new { id = "CloseSupport" }))
                                            {

                                                @Html.AntiForgeryToken()
                                                @Html.HiddenFor(m => m.SupportId)

                                                <div class="row">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="col-md-8">
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.SupportCode)
                                                            @Html.TextBoxFor(m => m.SupportCode, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        @*<div class="form-group col-md-4">
                                                                @Html.LabelFor(m => m.AssignToName)
                                                                @Html.TextBoxFor(m => m.AssignToName, new { @class = "form-control", @readonly = true })
                                                            </div>*@
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssueStatus)
                                                            @Html.TextBoxFor(m => m.LookupCodeMaster1.LookupCodeName, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.ReportedByName)
                                                            @Html.TextBoxFor(m => m.ReportedByName, new { @class = "form-control", @readonly = true })
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            @Html.LabelFor(m => m.Summary)
                                                            @Html.TextBoxFor(m => m.Summary, new { @class = "form-control", @readonly = true })

                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            @Html.LabelFor(m => m.Description)
                                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "10", @cols = "20", @readonly = true })

                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssueType)
                                                            @Html.TextBoxFor(m => m.LookupCodeMaster2.LookupCodeName, new { @class = "form-control", @readonly = true })
                                                            @*@Html.DropDownListFor(model => model.LookupIssueType, new SelectList(Model.IssueTypeList, "Id", "Name"), "Select IssueType", new { @class = "form-control", @disabled = true })*@

                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            @Html.LabelFor(m => m.LookupIssuePriority)
                                                            @Html.TextBoxFor(m => m.LookupCodeMaster.LookupCodeName, new { @class = "form-control", @readonly = true })
                                                            @*@Html.DropDownListFor(model => model.LookupIssuePriority, new SelectList(Model.IssuePriorityList, "Id", "Name"), "Select Priority", new { @class = "form-control", @disabled = true })*@

                                                        </div>

                                                    </div>

                                                    <div class="col-md-4">
                                                        <div class="form-group ">
                                                            @Html.LabelFor(m => m.Notes)
                                                            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @rows = "5", @cols = "20" })

                                                        </div>
                                                        @*<div class="form-group col-md-4" style="border: 1px solid;">
                                                                @Html.LabelFor(m => m.Comments)
                                                                <br />
                                                                <span>@Html.Raw(Model.Comments)</span>

                                                            </div>*@
                                                        <div class="form-group ">
                                                            @Html.LabelFor(m => m.Comments)
                                                            @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", @rows = "5", @cols = "20", @readonly = "true", @id = "ClosingComments" })
                                                        </div>
                                                        <div class="form-group ">
                                                            @Html.LabelFor(m => m.UserComments)
                                                            @Html.TextAreaFor(model => model.UserComments, new { @class = "form-control", @rows = "5", @cols = "20", @readonly = "true", @id = "UserComments" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group  col-md-12 ">
                                                        <input type="submit" value="Update" name="action" class="btn btn-flat btn-info m-b-10 m-l-5 pull-right" />

                                                        @if (Model.IsFixed != true)
                                                        {
                                                            <input type="submit" value="InProgress" name="action" class="btn btn-flat btn-warning m-b-10 m-l-5 pull-right" />


                                                            <button type="button" value="Done" class=" btn btn-flat btn-pink m-b-10 m-l-5 pull-right" data-toggle="modal" data-target="#doneticket" id="Save">Done</button>
                                                        }

                                                        @if ((Model.LookupCodeMaster1.LookupCodeName == "Done" && Model.IsFixed == true) || Model.showCloseButton)
                                                        {
                                                            <input type="submit" value="Close the ticket" name="action" class="btn btn-flat btn-danger m-b-10 m-l-5 pull-right" />
                                                        }
                                                    </div>
                                                </div>



                                                <div class="modal fade" id="doneticket" tabindex="-1" role="dialog" aria-labelledby="closeticket" aria-hidden="true">
                                                    <div class="modal-dialog modal-sm">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="close"><span class="fa fa-close" aria-hidden="true"></span></button>
                                                                <h4 class="modal-title custom_align" id="Heading">Close the ticket with comments</h4>
                                                            </div>
                                                            <div class="modal-body">

                                                                <div class="alert">
                                                                    <span class="fa fa-exclamation-triangle"></span> Please add comments before marking ticket as done.
                                                                </div>



                                                                <div class=" row">
                                                                    <div class="form-group col-md-6">
                                                                        @Html.LabelFor(m => m.TempComments)
                                                                        @Html.TextAreaFor(m => m.TempComments, new { @class = "form-control", @id = "Comments", @rows = "5" })
                                                                        <p class="text-danger" id="error"></p>
                                                                        @*@Html.ValidationMessageFor(m => m.TempComments, "", new { @class = "text-danger" })*@
                                                                    </div>
                                                                </div>


                                                            </div>
                                                            <div class="modal-footer ">

                                                                <button type="button" class="btn btn-success" id="closeYes" onclick="doneTicket();"><span class="fa fa-check"></span> Yes</button>
                                                                <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="fa fa-close"></span> No</button>

                                                            </div>
                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>
                                                    <!-- /.modal-dialog -->
                                                </div>

                                            }

                                            <div class="panel panel-default">
                                                <div class="panel-heading"> Support Documents</div>
                                                <div class="panel-body">

                                                    <div class="col-md-12">
                                                        <div class="row">
                                                            <div class="bootstrap-data-table-panel">
                                                                @if (Model.SupportFilesList != null && Model.SupportFilesList.Count > 0)
                                                                {
                                                                    string FileName = string.Empty;
                                                                    <table id="datatable-buttons" class="table table-striped table-bordered">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Document Name</th>
                                                                                <th>Action</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @foreach (var item in Model.SupportFilesList)
                                                                            {
                                                                                <tr>
                                                                                    <td>@item.FileName</td>
                                                                                    <td>

                                                                                        @using (Html.BeginForm("GetImage", "Support", FormMethod.Get, new { @class = "form-horizontal form-label-left" }))
                                                                                        {

                                                                                            <input type="hidden" name="imgname" value="@item.FileName" />
                                                                                            <input type="hidden" name="supportId" value="@item.SupportId" />
                                                                                            <button type="submit" class="pull-right btn-warning btn-flat "><i class="ti-download"></i></button>
                                                                                        }
                                                                                        @*<button type="button" class="pull-left btn-warning btn-flat m-l-5" href="javascript:void(0)" onclick="downloadImage('@item.FileServerPath','@item.FileName','@item.SupportId');"> <i class="ti-download"></i></button>*@

                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                }
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>